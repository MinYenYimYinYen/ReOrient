<Window x:Class="ReOrient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReOrient"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:mod="clr-namespace:ReOrient.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <mod:MapController x:Key="MapController" />
    </Window.Resources>
    <Grid>
        <Grid DataContext="{Binding Source={StaticResource MapController}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Zip Code:" />
                    <TextBox  Width="65" Text="{Binding Path=ZipCode}" />                    
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Size Lo" />
                    <TextBox  Width="65" Text="{Binding Path=SizeLo}" />
                    <Label Content="Size Hi" />
                    <TextBox  Width="65" Text="{Binding Path=SizeHi}" />
                </StackPanel>
            </StackPanel>
            <m:Map Grid.Column="1"
                   CredentialsProvider="Atu4AQp2CNh0a2jeTlH3PwPWtCV-DyjxvTL2f4k2COQmV6407he4vlP2aJw9fZju"
                   ZoomLevel="16"
                   Center="{Binding Path=MapCenter}">
                <m:MapItemsControl ItemsSource="{Binding Path=Records}">
                    <m:MapItemsControl.ItemTemplate>
                        <DataTemplate>
                            <m:Pushpin Location="{Binding Path=Location}"></m:Pushpin>
                        </DataTemplate>
                    </m:MapItemsControl.ItemTemplate>
                </m:MapItemsControl>
            </m:Map>
        </Grid>

    </Grid>
</Window>
